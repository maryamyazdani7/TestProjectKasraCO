<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/KasraStyles")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="main-header">
        <img alt="شرکت مهندسی کسرا | نرم افزار حضور و غیاب، تردد، اتوماسیون تغذیه" src="~/Content/Images/logo.png">
    </header>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div id="snackbar"></div>
    <div class="loader-container d-none"><div class="loader"></div></div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/KasraScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
